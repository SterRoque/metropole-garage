{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "types": ["@citizenfx/client"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/interfaces/*"]
}
